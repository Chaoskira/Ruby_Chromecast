<div class="col-md-10 col-md-offset-1">
<!-- emplacement du trailer youtube -->
	
	<div class="video youtube col-md-10 col-md-offset-1 trailer"><iframe src="//www.youtube.com/embed/<%= params['source'] %>" frameborder="0" allowfullscreen></iframe></div>

<!-- barre -->
	<hr class="col-md-12"/>

<!-- suggestion -->
	<!-- trailer du même film -->
	<div class="col-md-3">
		<h3> Du même film :</h3>
		<hr class="col-md-12"/>
		<% if @film_trailer['youtube'].count > 0 %>
			<% @film_trailer['youtube'].each do |trailer| %>
				<% if trailer %>
					<% if trailer['source'] != params['source'] %>
						<div style="margin-top: 10px; margin-bottom: 10px;">
							<%= link_to "#{trailer['name']}", thrailer_path(:id=>@film_detail['id'],:source=>trailer['source']) %>
						</div>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-8 col-md-offset-1">
		<h3> Suggestion :</h3>
		<hr class="col-md-12"/>
		<% @film_similaire.first(4).each do |similaire| %>
			<% if similaire %>
				<% Tmdb::Movie.trailers(similaire['id'])['youtube'].first(1).each do |trailer| %>
					<% if trailer %>
						<div class="col-md-12">
							<div class="col-md-3">
								<%= image_tag("#{@configuration.base_url}w154#{Tmdb::Movie.detail(similaire['id'])['poster_path']}", size:"100%") if Tmdb::Movie.detail(similaire['id'])['poster_path'] %>
							</div>
							<div class="col-md-9">
								<h4>
									<%= similaire['title'] %>
								</h4>
								<div>
									<%= Tmdb::Movie.detail(similaire['id'])['overview'] %>
								</div>
							</div>
							<button class="btn btn-primary col-md-4 col-md-offset-8"><%=link_to "Watch the thrailer", thrailer_path(:id=>similaire['id'],:source=>trailer['source']), {style: "color: white;" } %></button>
						</div>
						<hr class="col-md-12"/>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>
