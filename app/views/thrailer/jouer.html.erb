<div class="col-md-10 col-md-offset-1">
<!-- emplacement du trailer youtube -->
	<div class="col-md-10 col-md-offset-1" style="border: solid 1px; height:500px;"></div>

<!-- barre -->
	<div class="col-md-12" style="margin-top:50px;margin-bottom:50px;border: 1px solid;border-bottom: none"></div>

<!-- suggestion -->
	<!-- trailer du même film -->
	<div class="col-md-4">
		<h3> Du même film :</h3>
		<% @film_trailer['youtube'].each do |trailer| %>
			<% if trailer %>
				<div style="margin-top: 10px; margin-bottom: 10px;">
					<%= link_to "#{trailer['name']}", "http://www.youtube.com/watch?v=#{trailer['source']}" %>
				</div>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-8">
		<h3> Suggestion :</h3>
		<% @film_similaire.first(4).each do |similaire| %>
			<% if similaire %>
				<% Tmdb::Movie.trailers(similaire['id']).first(1).each do |trailer| %>
					<% if trailer %>
						<%= link_to image_tag("#{@configuration.base_url}w154#{similaire['poster_path']}"), "" %></br></br>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</div>