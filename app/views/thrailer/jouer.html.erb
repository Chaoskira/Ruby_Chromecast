<div class="col-md-10 col-md-offset-1">
<!-- emplacement du trailer youtube -->
	
	<div class="video youtube col-md-10 col-md-offset-1" style="height:600px;"><iframe width="100%" height="100%" src="//www.youtube.com/embed/<%= params['source'] %>" frameborder="0" allowfullscreen></iframe></div>

<!-- barre -->
	<div class="col-md-12" style="margin-top:50px;margin-bottom:50px;border: 1px solid;border-bottom: none"></div>

<!-- suggestion -->
	<!-- trailer du même film -->
	<div class="col-md-4">
		<h3> Du même film :</h3>
		<% if @film_trailer['youtube'].count > 0 %>
			<% @film_trailer['youtube'].each do |trailer| %>
				<% if trailer %>
					<% if trailer['source'] != params['source'] %>
						<div style="margin-top: 10px; margin-bottom: 10px;">
							<%= link_to "#{trailer['name']}", thrailer_path(:id=>@film_detail['id'],:source=>trailer['source']) %>
						</div>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-8">
		<h3> Suggestion :</h3>
		<% @film_similaire.first(4).each do |similaire| %>
			<% if similaire %>
				<% Tmdb::Movie.trailers(similaire['id'])['youtube'].first(1).each do |trailer| %>
					<% if trailer %>
						<div style="margin-top:50px;">
							<%= image_tag("#{@configuration.base_url}w154#{Tmdb::Movie.detail(similaire['id'])['poster_path']}", size:"100x150") if Tmdb::Movie.detail(similaire['id'])['poster_path'] %>
							<div style="margin-top:-150px; font-size:20px;" class="col-md-offset-4 col-md-10">
								<%= similaire['title'] %>
							</div>
							<div style="margin-top: -120px; text-align:justify" class="col-md-10 col-md-offset-4">
								<%= Tmdb::Movie.detail(similaire['id'])['overview'] %>
							</div>
							<button class="btn btn-default col-md-offset-10 col-md-3 col-xs-offset-5 col-xs-2 btn-primary" style="margin-top:-50px;"><%=link_to "Watch the thrailer", thrailer_path(:id=>similaire['id'],:source=>trailer['source']) %></button>
						</div>
					<% end %>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>
