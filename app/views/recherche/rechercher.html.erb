<div class="col-md-10 col-md-offset-1 col-xs-offset-1 col-xs-10" style="margin-top:100px;border: 1px solid;border-bottom: none">
</div>
<div class="col-md-10 col-md-offset-1">
	<% @dernier_films.each do |film| %>
		<% if film && Tmdb::Movie.images(film['id'])['posters'] %>
			<% Tmdb::Movie.trailers(film['id'])['youtube'].first(1).each do |trailer| %>
				<div class="col-md-5 col-md-offset-1">
				<%= image_tag("#{@configuration.base_url}w154#{Tmdb::Movie.detail(film['id'])['poster_path']}") if Tmdb::Movie.detail(film['id'])['poster_path'] %>
				<%= link_to "#{film['title']} - #{trailer['name']}", "http://www.youtube.com/watch?v=#{trailer['source']}" %>
				</div>
			<% end %>
		<% end %>
	<% end %>
</div>